<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:colorPrimary">@color/green_500</item>
        <item name="android:colorPrimaryDark">@color/green_700</item>
        <item name="android:colorAccent">@color/pink_a400</item>

        <!-- Changes colors under EditText -->
        <item name="colorControlNormal">@color/green_500</item>
        <item name="colorControlActivated">@color/pink_a400</item>
        <item name="colorControlHighlight">@color/pink_a400</item>
        <item name="android:editTextStyle">@style/App_EditTextStyle</item>
    </style>

    <style name="App_EditTextStyle" parent="@style/Widget.AppCompat.EditText">
        <item name="android:layout_marginLeft">35dp</item>
        <item name="android:layout_marginRight">35dp</item>
    </style>

</resources>
